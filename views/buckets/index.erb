<div class="row">

</div>
<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Name</th>
    <th scope="col">Total objects</th>
    <th scope="col">Bucket created</th>
    <th scope="col">Permissions</th>
    <th scope="col">Region</th>
    <th scope="col">Delete</th>
  </tr>
  </thead>
  <tbody>
  <% @buckets.each do |bucket| %>
    <tr>
      <th scope="row"><%= bucket[:index] %></th>
      <td><a href="/buckets/<%= bucket[:name] %>" class="text-dark"><%= bucket[:name] %></td>
      <td><%= bucket[:total_objects] %></td>
      <td><%= bucket[:creation_date] %></td>
      <td>
        <ul>
          <li>Block public ACLs: <%=  bucket[:access].block_public_acls ? 'On' : 'Off' %></li>
          <li>Ignore public ACLs: <%=  bucket[:access].ignore_public_acls ? 'On' : 'Off' %></li>
          <li>Block public policies: <%=  bucket[:access].block_public_policy ? 'On' : 'Off' %></li>
          <li>Restrict Public Buckets: <%=  bucket[:access].restrict_public_buckets ? 'On' : 'Off' %></li>
        </ul>
      </td>
      <td><%= bucket[:region] %></td>

      <td><a href="#" class="btn btn-danger">&times;</a></td>
    </tr>
  <% end %>
  </tbody>
</table>