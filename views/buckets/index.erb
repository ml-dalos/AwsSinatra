<br/>
<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <p>
        <a href="/buckets/new" class="btn btn-success btn-lock">New Bucket</a>
      <p>
    </div>
  </div>
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Total objects</th>
      <th scope="col">Bucket created</th>
      <th scope="col">Access</th>
      <th scope="col">Region</th>
      <th scope="col">Delete</th>
    </tr>
    </thead>
    <tbody>
    <% @buckets.each do |bucket| %>
      <tr>
        <th scope="row"><%= bucket[:index] %></th>
        <td><a href="/buckets/<%= bucket[:name] %>" class="text-dark"><%= bucket[:name] %></td>
        <td><%= bucket[:total_objects] %></td>
        <td><%= bucket[:creation_date] %></td>
        <td><%= bucket[:access] %></td>
        <td><%= bucket[:region] %></td>
        <td><a href="#" class="btn btn-danger">&times;</a></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
